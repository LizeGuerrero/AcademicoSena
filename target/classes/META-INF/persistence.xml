<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="academicoPU" transaction-type="RESOURCE_LOCAL">
        <!-- ✅ Provider correcto -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ====== TODAS LAS ENTIDADES ====== -->
        <class>com.academico.academicosena.entity.Institucion</class>
        <class>com.academico.academicosena.entity.TipoPrograma</class>
        <class>com.academico.academicosena.entity.ProgramaAcademico</class>
        <class>com.academico.academicosena.entity.Nivel</class>
        <class>com.academico.academicosena.entity.ConfiguracionPeriodo</class>
        <class>com.academico.academicosena.entity.PeriodoAcademico</class>
        <class>com.academico.academicosena.entity.Asignatura</class>
        <class>com.academico.academicosena.entity.Estudiante</class>
        <class>com.academico.academicosena.entity.Matricula</class>
        <class>com.academico.academicosena.entity.Docente</class>
        <class>com.academico.academicosena.entity.AsignacionDocente</class>
        <class>com.academico.academicosena.entity.ActividadEvaluacion</class>
        <class>com.academico.academicosena.entity.CalificacionActividad</class>
        <class>com.academico.academicosena.entity.CalificacionPeriodo</class>
        <class>com.academico.academicosena.entity.CalificacionAsignatura</class>
        <class>com.academico.academicosena.entity.EscalaCalificacion</class>
        <class>com.academico.academicosena.entity.Usuario</class>

        <properties>
            <!-- Conexión a MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistema_academico?serverTimezone=UTC&amp;useSSL=false"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Configuración Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- Pool de conexiones (HikariCP) -->
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.minimumIdle" value="5"/>
        </properties>
    </persistence-unit>
</persistence>
